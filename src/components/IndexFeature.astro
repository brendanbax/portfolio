---
import * as feature from '../pages/projects/athome-lite.md'
import imgReference from '/src/assets/athome-lite/cover.webp'
import { Image } from 'astro:assets'

const { title, date, assets, summary, projectDate, technology, roles } = feature.frontmatter
---
<div id="section" class="relative flex items-stretch justify-center pb-12 px-6">
    <div id="container" class="willFadeIn opacity-0">
        <Image
            class="block w-full sm:w-1/3 h-60 sm:h-full object-cover rounded-tl-2xl rounded-tr-2xl sm:rounded-tr-none sm:rounded-l-2xl"
            src={imgReference}
            alt={'Mobile screens for AtHome Lite video visit application - phone screens with various chat interfaces'}
        />
        <div class="rounded-br-2xl sm:rounded-tr-2xl rounded-bl-2xl sm:rounded-bl-none  w-full sm:w-2/3 p-4 xs:p-6 bg-neutral-50 dark:bg-fill dark:bg-gradient-to-bl from-fill to-fill-muted ">
            <p class="mb-2 text-sm uppercase text-fg-muted opacity-80">Featured</p>
            <h2 class="mb-4 text-3xl font-bold">{title}</h2>
            <p class="mb-6 font-light leading-loose text-fg-muted">{summary}</p>
            <a
                class="inline-block font-medium dark:text-accent border-b-2 border-transparent transition-colors hover:border-accent"
                href="/projects/athome-lite"
            >Full story</a>
        </div>
    </div>
</div>

<style>
    #section::before {
        --height: 10vh;
        content: '';
        position: absolute;
        top: calc(var(--height) * -1);
        left: 0;
        right: 0;
        height: 0;
        border-bottom: var(--height) solid theme(colors.fill-muted);
        border-left: 100vw solid transparent;
    }
    #container {
        @apply relative z-0 flex flex-col sm:flex-row items-center max-w-3xl rounded-2xl dark:border dark:border-b-neutral-950 dark:border-l-neutral-900 dark:border-r-neutral-800 dark:border-t-neutral-700;
    }
    #container::after {
        content: '';
        @apply absolute inset-0 transform -translate-x-4 translate-y-4 -z-10 border border-fg-muted rounded-2xl opacity-25;
    }
</style>
