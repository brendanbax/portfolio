---
import Layout from './Layout.astro'

export type Changelog = {
	date: string
	title: string
	description: string
	changes: [string]
}

const { frontmatter } = Astro.props
const sortedChanges = frontmatter.changelog.sort((a: Changelog, b: Changelog) => {
	if (a.date > b.date) return -1
	if (a.date < b.date) return 1
	return 0
})
---

<Layout title="Changelog">
	<div class="mx-auto max-w-prose p-6">
		<h1 class="mb-6 text-3xl font-bold">Changelog</h1>
		<div class="flex flex-col gap-y-6">
			{
				sortedChanges.map((c: Changelog) => {
					return (
						<div class="bg-fill rounded-xl p-6 shadow-lg">
							<p class="text-sm font-semibold uppercase text-accent">{c.date}</p>
							<h2 class="text-fg-muted text-xl font-bold">{c.title}</h2>
							<p class="mb-2 text-base font-light leading-loose">{c.description}</p>
							<ul class="text-fg-muted list-disc pl-6 text-sm opacity-75">
								{c.changes.map((cc: string) => (
									<li>{cc}</li>
								))}
							</ul>
						</div>
					)
				})
			}
		</div>
	</div>
</Layout>
